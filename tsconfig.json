{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "app.config.js",
    "expo-env.d.ts",
    "src/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
